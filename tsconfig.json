{
  "compilerOptions": {
    "target": "es2017",
    "allowJs": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "baseUrl": ".",
    "outDir": "src/JS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*"],
    }
  },
  "include": [
    "src/**/*"
  ]
}
